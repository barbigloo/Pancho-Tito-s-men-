        <button class="price-btn" data-name="Agua Saborizada Aquarius" data-size="500ml" data-price="900">Aquarius - $900</button>
        <button class="price-btn" data-name="Agua Saborizada Placer" data-size="500ml" data-price="700">Placer - $700</button>
        <button class="price-btn" data-name="Agua Saborizada Levite" data-size="500ml" data-price="600">Levite - $600</button>
        <button class="price-btn" data-name="Agua Saborizada Ser" data-size="500ml" data-price="600">Ser - $600</button>
       </div>
      </div>
     </section>
    </div>
    <!-- ------------------ SECCIÃ“N DE PEDIDO ------------------ -->
    <div class="order-section relative">
     <div id="loading-overlay" class="loading-overlay">Cargando...</div>
     <h2 class="order-header">ðŸ›’ Tu Pedido</h2>
     <div id="order-list">
      <div class="empty-order">AÃºn no hay productos en tu pedido.</div>
     </div>
     <!-- Bloque que contiene el total y los botones, esencial para el carrito -->
     <div class="order-total">
      <div class="total-amount">Total: <span id="total-amount">$0</span></div>
      <button class="make-order-btn" id="make-order-btn" disabled>Hacer Pedido</button>
      <button class="clear-order-btn" id="clear-order-btn" disabled>Vaciar Pedido</button>
     </div>
    </div>
   </div>
  </div>

  <!-- Toast for adding items -->
  <div id="toast" class="toast">Producto aÃ±adido al pedido.</div>

  <!-- Bread Selection Modal (APARTADO DEL PAN) -->
  <div id="bread-modal-overlay" class="modal-overlay">
   <div class="modal">
    <div class="modal-header">
     <h3 class="modal-title text-2xl font-bold text-center mb-4 text-red-700">ðŸ¥– Elige el Tipo de Pan</h3>
     <p class="modal-subtitle text-lg text-gray-600 text-center" id="pancho-name-display"></p>
    </div>
    <div id="bread-options-container">
     
     <div class="bread-option-card" data-bread-type="ClÃ¡sico" data-extra-cost="0">
      <div class="bread-title">ðŸž Pan de Viena ClÃ¡sico</div>
      <p class="bread-description text-gray-600 text-sm">El pan tradicional suave y esponjoso.</p>
      <div class="bread-price">Â¡Incluido!</div>
     </div>

     <div class="bread-option-card" data-bread-type="Integral" data-extra-cost="300">
      <div class="bread-title">ðŸŒ¾ Pan Integral</div>
      <p class="bread-description text-gray-600 text-sm">OpciÃ³n con cereales y semillas, mÃ¡s saludable.</p>
      <div class="bread-price extra">+ $300</div>
     </div>

     <!-- Pan Vegano/Sin TACC -->
     <div class="bread-option-card" data-bread-type="Vegano/Sin TACC" data-extra-cost="0">
      <div class="bread-title">ðŸŒ± Pan Vegano / Sin TACC</div>
      <p class="bread-description text-gray-600 text-sm">OpciÃ³n 100% vegetal y libre de gluten.</p>
      <div class="bread-price text-green-600">Â¡GRATIS!</div>
     </div>
     
    </div>
    <div class="modal-buttons">
     <button class="modal-btn modal-btn-confirm" id="add-to-order-with-bread" disabled>AÃ±adir al Pedido</button>
     <button class="modal-btn modal-btn-cancel" id="cancel-bread-selection">Cancelar</button>
    </div>
   </div>
  </div>


  <!-- Confirmation Modal -->
  <div id="order-modal-overlay" class="modal-overlay">
   <div class="modal">
    <div class="modal-header">
     <h3 class="modal-title text-2xl font-bold text-center mb-4 text-red-700">Confirmar Pedido</h3>
     <p class="modal-subtitle text-gray-600 text-center">Revisa tu pedido antes de enviarlo.</p>
    </div>
    <div class="order-summary" id="modal-order-summary">
     <!-- Summary will be rendered here -->
    </div>
    <div class="total-amount summary-total">Total a Pagar: <span id="modal-total-amount">$0</span></div>
    <div class="modal-buttons">
     <button class="modal-btn modal-btn-confirm" id="confirm-order-btn">Confirmar y Enviar</button>
     <button class="modal-btn modal-btn-cancel" id="cancel-modal-btn">Cancelar</button>
    </div>
   </div>
  </div>

  <!-- Order Sent Banner (ESTÃ‰TICA MEJORADA) -->
  <div id="order-sent-banner" class="order-sent-banner">
   <div class="checkmark">âœ…</div>
   <h2>Â¡Pedido Enviado!</h2>
   <p id="banner-message">Tu orden estÃ¡ siendo preparada. Gracias por tu compra.</p>
  </div>

  <script type="module">
    // Importaciones de Firebase
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
    import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
    import { getFirestore, collection, addDoc, serverTimestamp, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

    setLogLevel('Debug');

    let db;
    let auth;
    let userId = 'anonymous'; 
    let order = []; // Estado global para el carrito
    let tempPanchoConfig = null; // Para almacenar temporalmente el pancho antes de elegir el pan

    // --- INICIALIZACIÃ“N DE FIREBASE Y AUTENTICACIÃ“N ---
    const initFirebase = async () => {
        try {
            const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
            const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');

            if (Object.keys(firebaseConfig).length === 0) {
                console.error("Firebase config is missing.");
                return;
            }

            const app = initializeApp(firebaseConfig);
            db = getFirestore(app);
            auth = getAuth(app);

            const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
            if (initialAuthToken) {
                await signInWithCustomToken(auth, initialAuthToken);
            } else {
                await signInAnonymously(auth);
            }

            onAuthStateChanged(auth, (user) => {
                if (user) {
                    userId = user.uid;
                    console.log("User ID ready:", userId);
                } else {
                    console.log("No user is signed in.");
                }
            });
        } catch (error) {
            console.error("Firebase Initialization or Auth failed:", error);
        }
    };

    // --- AYUDANTES DE UI ---

    // Formatea el precio usando el separador de miles (tÃ­pico de ARS: 1.500)
    const formatPrice = (value) => `$${value.toLocaleString('es-AR')}`;

    const showToast = (message) => {
        const toastEl = document.getElementById('toast');
        toastEl.textContent = message;
        toastEl.classList.add('show');
        setTimeout(() => {
            toastEl.classList.remove('show');
        }, 2000);
    };

    const showLoading = (show) => {
        // Simple loading indicator logic here...
        console.log("Loading state:", show);
    };

    // --- LÃ“GICA DEL CARRITO ---

    const renderOrder = () => {
        const listEl = document.getElementById('order-list');
        const totalAmountEl = document.getElementById('total-amount');
        const makeOrderBtn = document.getElementById('make-order-btn');
        const clearOrderBtn = document.getElementById('clear-order-btn');

        if (order.length === 0) {
            listEl.innerHTML = '<div class="empty-order">AÃºn no hay productos en tu pedido.</div>';
            totalAmountEl.textContent = formatPrice(0);
            makeOrderBtn.disabled = true;
            clearOrderBtn.disabled = true;
            return;
        }

        let total = 0;
        let html = '';

        order.forEach((item, index) => {
            const itemTotal = item.price * item.quantity;
            total += itemTotal;

            html += `
                <div class="order-item">
                    <div class="order-item-name">${item.name} <span class="text-xs text-gray-500">(${item.size})</span></div>
                    <div class="order-item-details"></div>
                    <div class="order-item-controls">
                        <div class="quantity-controls">
                            <button class="quantity-btn" data-index="${index}" data-delta="-1" aria-label="Disminuir cantidad">-</button>
                            <span class="quantity-display">${item.quantity}</span>
                            <button class="quantity-btn" data-index="${index}" data-delta="1" aria-label="Aumentar cantidad">+</button>
                        </div>
                        <div class="item-total">${formatPrice(itemTotal)}</div>
                    </div>
                </div>
            `;
        });

        listEl.innerHTML = html;
        totalAmountEl.textContent = formatOrder(total);
        makeOrderBtn.disabled = false;
        clearOrderBtn.disabled = false;
    };

    const addToOrder = (name, size, price) => {
        // Encontrar si el artÃ­culo exacto (nombre + tamaÃ±o) ya existe
        const existingItemIndex = order.findIndex(item => item.name === name && item.size === size);

        if (existingItemIndex !== -1) {
            // El artÃ­culo existe, solo aumentar la cantidad
            order[existingItemIndex].quantity += 1;
        } else {
            // ArtÃ­culo nuevo, aÃ±adir al pedido
            order.push({ name, size, price, quantity: 1 });
        }

        renderOrder();
        showToast(`${name} (${size}) aÃ±adido.`);
    };

    const updateQuantity = (index, delta) => {
        index = parseInt(index);
        delta = parseInt(delta);

        if (index >= 0 && index < order.length) {
            order[index].quantity += delta;
            
            if (order[index].quantity <= 0) {
                order.splice(index, 1);
            }
            
            renderOrder();
        }
    };

    const clearOrder = () => {
        if (order.length > 0) {
            order = [];
            renderOrder();
            showToast("Pedido vaciado.");
        }
    };

    // --- LÃ“GICA DE SELECCIÃ“N DE PAN (NUEVA) ---

    const openBreadSelection = (name, basePrice, size) => {
        // Almacenar temporalmente los datos del pancho seleccionado
        tempPanchoConfig = { name, basePrice: parseInt(basePrice), size };
        
        // Resetear la selecciÃ³n en el modal
        document.querySelectorAll('#bread-options-container .bread-option-card').forEach(card => card.classList.remove('selected'));
        document.getElementById('add-to-order-with-bread').disabled = true;

        // Mostrar el nombre del pancho en el modal
        document.getElementById('pancho-name-display').textContent = `EstÃ¡s configurando: ${name}`;

        // Mostrar el modal
        document.getElementById('bread-modal-overlay').classList.add('show');
    };

    const selectBreadAndFinalize = () => {
        if (!tempPanchoConfig) return;

        const selectedBreadEl = document.querySelector('#bread-options-container .bread-option-card.selected');
        if (!selectedBreadEl) return;

        const breadType = selectedBreadEl.dataset.breadType;
        const extraCost = parseInt(selectedBreadEl.dataset.extraCost);

        const finalName = `${tempPanchoConfig.name} c/ Pan ${breadType}`;
        const finalPrice = tempPanchoConfig.basePrice + extraCost;
        const finalSize = tempPanchoConfig.size; // Mantener el tamaÃ±o para consistencia

        addToOrder(finalName, finalSize, finalPrice);

        // Limpiar y cerrar el modal
        document.getElementById('bread-modal-overlay').classList.remove('show');
        tempPanchoConfig = null;
    };

    // --- MODAL Y FIREBASE (REUTILIZADOS) ---

    const showOrderModal = () => {
        const modalOverlayEl = document.getElementById('order-modal-overlay');
        const summaryEl = document.getElementById('modal-order-summary');
        const totalAmountEl = document.getElementById('modal-total-amount');

        if (order.length === 0) return;

        let total = 0;
        let summaryHtml = '';

        order.forEach(item => {
            const itemTotal = item.price * item.quantity;
            total += itemTotal;

            summaryHtml += `
                <div class="summary-item">
                    <span class="summary-item-name">${item.quantity}x ${item.name}</span>
                    <span class="summary-item-details"></span>
                    <span class="summary-item-price">${formatPrice(itemTotal)}</span>
                </div>
            `;
        });
        
        totalAmountEl.textContent = formatPrice(total);
        summaryEl.innerHTML = summaryHtml;
        modalOverlayEl.classList.add('show');
    };

    const hideOrderModal = () => {
        document.getElementById('order-modal-overlay').classList.remove('show');
    };

    const confirmOrder = async () => {
        hideOrderModal();
        showLoading(true);

        try {
            const total = order.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const orderData = {
                userId: userId,
                items: order.map(item => ({
                    name: item.name,
                    size: item.size,
                    price: item.price,
                    quantity: item.quantity
                })),
                totalAmount: total,
                status: 'Pendiente',
                timestamp: serverTimestamp()
            };

            const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
            // Ruta pÃºblica para pedidos, permitiendo visibilidad para la administraciÃ³n.
            const ordersCollection = collection(db, `artifacts/${appId}/public/data/orders`); 

            const docRef = await addDoc(ordersCollection, orderData);
            console.log("Order submitted with ID: ", docRef.id);

            order = [];
            renderOrder();
            showOrderSentBanner();

        } catch (e) {
            console.error("Error submitting order to Firestore: ", e);
            showToast("Error al enviar el pedido. Intenta de nuevo.");
        } finally {
            showLoading(false);
        }
    };

    const showOrderSentBanner = () => {
        const bannerEl = document.getElementById('order-sent-banner');
        // Mensaje limpio sin el resumen del pedido (como solicitaste)
        document.getElementById('banner-message').textContent = "Tu orden estÃ¡ siendo preparada. Gracias por tu compra."; 
        
        bannerEl.classList.add('show');
        setTimeout(() => {
            bannerEl.classList.remove('show');
        }, 3000);
    };

    // --- LISTENERS DE EVENTOS ---

    const setupListeners = () => {
        // 1. DelegaciÃ³n de eventos para el menÃº
        document.getElementById('menu-content').addEventListener('click', (event) => {
            const btn = event.target.closest('.price-btn');
            if (btn) {
                // Si es un Pancho, abrimos el modal de pan
                if (btn.classList.contains('pancho-select-btn')) {
                    const name = btn.dataset.name;
                    const basePrice = btn.dataset.basePrice;
                    const size = btn.dataset.size;
                    openBreadSelection(name, basePrice, size);
                } 
                // Si es una Papa o una Bebida, se aÃ±ade directamente
                else {
                    const name = btn.dataset.name;
                    const size = btn.dataset.size;
                    const price = parseInt(btn.dataset.price);
                    if (name && size && !isNaN(price)) {
                        addToOrder(name, size, price);
                    }
                }
            }
        });

        // 2. Controles de cantidad en el carrito
        document.getElementById('order-list').addEventListener('click', (event) => {
            const btn = event.target.closest('.quantity-btn');
            if (btn) {
                const index = btn.dataset.index;
                const delta = btn.dataset.delta;
                if (index !== undefined && delta !== undefined) {
                    updateQuantity(index, delta);
                }
            }
        });

        // 3. LÃ³gica de Modal de Pan
        const breadOptionsContainer = document.getElementById('bread-options-container');
        breadOptionsContainer.addEventListener('click', (event) => {
            const card = event.target.closest('.bread-option-card');
            if (card) {
                document.querySelectorAll('.bread-option-card').forEach(c => c.classList.remove('selected'));
                card.classList.add('selected');
                document.getElementById('add-to-order-with-bread').disabled = false;
            }
        });

        document.getElementById('add-to-order-with-bread').addEventListener('click', selectBreadAndFinalize);
        document.getElementById('cancel-bread-selection').addEventListener('click', () => {
            document.getElementById('bread-modal-overlay').classList.remove('show');
        });
        document.getElementById('bread-modal-overlay').addEventListener('click', (e) => {
            if (e.target.id === 'bread-modal-overlay') {
                document.getElementById('bread-modal-overlay').classList.remove('show');
            }
        });


        // 4. Botones de acciÃ³n principal y modal de pedido
        document.getElementById('make-order-btn').addEventListener('click', showOrderModal);
        document.getElementById('clear-order-btn').addEventListener('click', clearOrder);
        document.getElementById('confirm-order-btn').addEventListener('click', confirmOrder);
        document.getElementById('cancel-modal-btn').addEventListener('click', hideOrderModal);
        document.getElementById('order-modal-overlay').addEventListener('click', (e) => {
            if (e.target.id === 'order-modal-overlay') {
                hideOrderModal();
            }
        });
    };

    // --- INICIALIZACIÃ“N ---
    window.onload = async () => {
        showLoading(true);
        await initFirebase();
        setupListeners();
        renderOrder(); 
        showLoading(false);
    };

  </script>
 </body>
</html>
